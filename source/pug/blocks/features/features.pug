mixin features(data)
    -
        var features = [
            {
                heading: 'Первоначальный взнос',
                text: 'от 10 до 50% от&nbsp;стоимости техники',
            },
            {
                heading: 'Консультирование клиентов',
                text: 'по выбору и&nbsp;оптимальному использованию техники',
            },
            {
                heading: 'Программа trade in',
                text: 'Обмен своей старой техники по программе Trade In',
            },
            {
                heading: 'Гарантия на всю технику',
                text: 'Гарантия на всю технику от&nbsp;производителя',
            },
            {
                heading: 'Комплексный подход к&nbsp;задачам клиента',
                text: 'Мы уважаем наших клиентом и&nbsp;стараемся предоставить качественный сервис',
                mod: 'large'
            },
            {
                heading: 'Лизинг на выгодных условиях',
                text: 'Срок лизинга от&nbsp;1 до&nbsp;5 лет без налога на имущество',
            },
            {
                heading: 'Большой спектр дополнительных услуг',
                text: 'Аренда, рассрочка, лизинг',
            },
            {
                heading: 'Работа с&nbsp;запасными частями',
                text: 'Услуги по обслуживанию, ремонту и&nbsp;поставке запасных частей',
            },
            {
                heading: 'Большой выбор техники',
                text: 'Более 100 единиц техники в&nbsp;наличии',
            },
        ]

    +el({
        tag: 'ul',
        class: 'features',
        mod: data.mod,
        mix: data.mix,
        js: data.js,
    })&attributes(attributes)
        each item, index in features
            +el({
                tag: 'li',
                class: 'features__item',
                mod: item.mod,
                mix: 'wow fadeInUp',
            })(data-wow-delay=0.2 + index * 0.2 + "s")
                +features-item({
                    heading: item.heading,
                    text: item.text,
                    image: item.image,
                })
