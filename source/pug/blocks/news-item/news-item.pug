mixin news-item(data)
    +el({
        tag: 'article',
        class: 'news-item',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
    })&attributes(attributes)
        +el({
            tag: 'a',
            href: 'news-item.html',
            class: 'news-item__image-wrap',
        })
            img.news-item__image(src='./assets/upload/' + data.image, alt='')
        .news-item__content
            +date({
                mix: 'news-item__date',
                date: data.date,
            })
            +heading({
                tag: 'h3',
                mix: 'news-item__heading',
                heading: data.heading,
                link: true,
                href: 'news-view.html'
            })
            +el({
                tag: 'p',
                class: 'news-item__text',
                text: data.text,
            })
                block
