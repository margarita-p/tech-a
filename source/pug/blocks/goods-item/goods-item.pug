mixin goods-item(data)
    +el({
        class: 'goods-item',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
        text: data.text,
        before: {
            tag: 'svg',
            class: 'goods-item__icon',
            icon: data.icon,
            width: '80',
            height: '80'
        }
    })&attributes(attributes)
