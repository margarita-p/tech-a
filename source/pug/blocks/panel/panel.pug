mixin panel(data)
    +el({
        class: 'panel',
        mod: data.mod,
        mix: data.mix,
        js: data.js,
    })&attributes(attributes)
        if data.heading
            +heading({
                tag: data.headingTag,
                mix: 'panel__heading',
                heading: data.heading,
                subheading: data.subheading
            })
        block
