mixin header(data)
    +el({
        tag: 'header',
        class: 'header',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
    })&attributes(attributes)
        .header__top
            .header__wrap
                +logo({
                    mix: 'header__logo',
                    header: true,
                })
                .header__company-block
                    +company({
                        mix: 'header__company header__company--info',
                        text: 'Официальный дилер строительной техники в&nbsp;Респ.&nbsp;Башкортостан, Татарстан, Поволжье, Урале',
                    })
                    +company({
                        mix: 'header__company header__company--address',
                        text: 'г. Уфа, ул. Сельская Богородская, <br>д. 51, оф. 308',
                    })
                    +company({
                        mix: 'header__company header__company--phone',
                        href: '79273321792',
                        phone: '+7 (927) 332 17 92'
                    })
                +button-nav({
                    mix: 'header__btn-nav',
                    js: 'button-nav'
                })
        nav.header__bottom.js-main-nav(aria-label='Основное меню' itemscope itemtype='http://schema.org/SiteNavigationElement')
            .header__wrap
                +main-nav({
                    items: mainNav,
                    mix: 'header__main-nav'
                })
                .header__company-block
                    +company({
                        mix: 'header__company header__company--address',
                        text: 'г. Уфа, ул. Сельская Богородская, <br>д. 51, оф. 308',
                    })
                    +company({
                        mix: 'header__company header__company--phone',
                        href: '79273321792',
                        phone: '+7 (927) 332 17 92'
                    })
