mixin view-1(data)
    +el({
        tag: 'section',
        class: 'view-1',
        mod: data.mod,
        mix: data.mix,
        js: data.js,
    })&attributes(attributes)
        .view-1__wrap
            .view-1__inner
                .view-1__image-content
                    +el({
                        tag: 'picture',
                        class: 'view-1__picture',
                    })
                        source(media="(min-width: 768px)" srcset='./assets/images/' + data.picture.large + '@1x.webp 1x, ./assets/images/' + data.picture.large + '@2x.webp 2x' type='image/webp')
                        source(media="(min-width: 768px)" srcset='./assets/images/' + data.picture.large + '@1x.' + data.exp + ' 1x, ./assets/images/' + data.picture.large + '@2x.' + data.exp + ' 2x')
                        source(media="(min-width: 420px)" srcset='./assets/images/' + data.picture.medium + '@1x.webp 1x, ./assets/images/' + data.picture.medium + '@2x.webp 2x' type='image/webp')
                        source(media="(min-width: 420px)" srcset='./assets/images/' + data.picture.medium + '@1x.' + data.exp + ' 1x, ./assets/images/' + data.picture.medium + '@2x.' + data.exp + ' 2x')
                        source(srcset='./assets/images/' + data.picture.small + '@1x.webp 1x, ./assets/images/' + data.picture.small + '@2x.webp 2x' type='image/webp')
                        img(src='./assets/images/' + data.picture.small + '@1x.' + data.exp srcset='./assets/images/' + data.picture.small + '@2x.' + data.exp + ' 2x' alt=data.alt ? data.alt : '')
                .view-1__text-content
                    +el({
                        tag: 'h2',
                        class: 'view-1__heading',
                        text: data.heading
                    })
                    block
