# http://EditorConfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.js]
indent_style = space
indent_size = 2

[*.scss]
indent_size = 2

[*.sass]
indent_size = 4

[*.pug]
indent_size = 4

[{bower.json,package.json,.travis.yml}]
indent_style = space
indent_size = 2
